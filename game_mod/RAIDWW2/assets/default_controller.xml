<controller>
	<base>
		<change_grid_size device="keyboard" shortkey="g"/>
		<change_snaprot device="keyboard" shortkey="h"/>
		<change_snaprot_axis device="keyboard" shortkey="y"/>
		<use_snappoints_toggle device="keyboard" shortkey="u"/>
		<surface_move_toggle device="keyboard" shortkey="n"/>
		<toggle_coordinate_system device="keyboard" shortkey="num 0"/>
		<increase_rotation_speed device="keyboard" shortkey="num +"/>
		<decrease_rotation_speed device="keyboard" shortkey="num -"/>
		<increase_grid_altitude device="keyboard" shortkey="page up"/>
		<decrease_grid_altitude device="keyboard" shortkey="page down"/>
		<using_group_toggle device="keyboard" shortkey="l"/>
	
		<!-- Camera -->	
		<forward device="keyboard" shortkey="w"/>
		<go_left device="keyboard" shortkey="a"/>
		<backward device="keyboard" shortkey="s"/>
		<go_right device="keyboard" shortkey="d"/>
		<altitude_up device="keyboard" shortkey="e"/>
		<altitude_down device="keyboard" shortkey="q"/>
		<plane_switch device="keyboard" shortkey="left shift"/>
		<move_speed_up device="mouse" shortkey="mouse wheel up"/>
		<move_speed_down device="mouse" shortkey="mouse wheel down"/>
		<decrease_view_distance device="keyboard" shortkey="x"/>
		<increase_view_distance device="keyboard" shortkey="c"/>
		<ruler_points device="keyboard" shortkey="r"/>
	</base>
	<layer>
		<move_forward device="keyboard" shortkey="up"/>
		<move_left device="keyboard" shortkey="left"/>
		<move_back device="keyboard" shortkey="down"/>
		<move_right device="keyboard" shortkey="right"/>
		<move_up device="keyboard" shortkey="page up"/>
		<move_down device="keyboard" shortkey="page down"/>
		<yaw_forward device="keyboard" shortkey="num 8"/>
		<yaw_backward device="keyboard" shortkey="num 2"/>
		<pitch_left device="keyboard" shortkey="num 1"/>
		<pitch_right device="keyboard" shortkey="num 3"/>
		<roll_left device="keyboard" shortkey="num 4"/>
		<roll_right device="keyboard" shortkey="num 6"/>
		<position_as device="keyboard" shortkey="p"/>
		<unit_sampler device="keyboard" shortkey="b"/>
		<snap_rotate device="keyboard" shortkey="f"/>
		<clone device="keyboard" shortkey="v"/>
		<clone_edited_values device="keyboard" shortkey="m"/>
		<set_reference_unit device="keyboard" shortkey="r"/>
		<show_replace_units device="keyboard" shortkey="r"/>
		<destroy device="keyboard" shortkey="delete"/>
		<reset_rotation device="keyboard" shortkey="num enter"/>
		<deselect device="keyboard" shortkey="esc"/>
		<assign_suface_normal device="keyboard" shortkey="num ."/>
		<surface_move_align_normal device="mouse" shortkey="0"/>
		<increase_dynamic_distance device="keyboard" shortkey="up"/>
		<decrease_dynamic_distance device="keyboard" shortkey="down"/>
		<add_action device="keyboard" shortkey="a"/>
		<add_trigger device="keyboard" shortkey="t"/>
		<select_action_with_unit device="keyboard" shortkey="s"/>
		<remove_connection device="keyboard" shortkey="o"/>
		<set_portal_top device="keyboard" shortkey="home"/>
		<set_portal_bottom device="keyboard" shortkey="end"/>
		<set_world_camera_far_dof device="keyboard" shortkey="home"/>
		<set_world_camera_near_dof device="keyboard" shortkey="end"/>
	</layer>
	<menu>
		<new shortkey="Ctrl+N"/>
		<open shortkey="Ctrl+O"/>
		<save shortkey="Ctrl+S"/>
		<select shortkey="Ctrl+1"/>
		<move shortkey="Ctrl+2"/>
		<rotate shortkey="Ctrl+3"/>
		<resize shortkey="Ctrl+4"/>
		<move_transform_type_in shortkey="Ctrl+M"/>
		<rotate_transform_type_in shortkey="Ctrl+R"/>
		<run_mission_simulation shortkey="Ctrl+T"/>
		<run_gameplay_simulation shortkey="Ctrl+Alt+T"/>
		<orthographic shortkey="F8"/>
		<use_light shortkey="F6"/>
		<show_center shortkey="F7"/>
		<show_camera_info shortkey="F9"/>
		<capture_screenshot shortkey="F12"/>
		<unhide_all shortkey="Ctrl+Shift+J"/>
		<hide_selected shortkey="Ctrl+J"/>
		<configuration shortkey="Ctrl+Alt+C"/>
		<expert_mode shortkey="Ctrl+X"/>
		<global_select_unit shortkey="Ctrl+Alt+S"/>
		<camera_transform_type_in shortkey="Ctrl+C"/>
		<create_group shortkey="Ctrl+K"/>
		<remove_group shortkey="Shift+K"/>
	</menu>
</controller>
